<div class="editor_panel">
	<div class="editor clearfix">
			<div class="city_input" style="height:250px">
				<% form_for :user, :url => {:action => :process_location}, :html => {:name => 'location_lookup'} do |f| %>

				<span class="label">City Name</span>

				<div id="lookup" style="display:inline;">
				
					<%= f.text_field :address, {:size => 100, :id => 'i_like_text', :class => 'inputtext'} %>
					<script>
					<!--
						var suggestr = new ajaxSuggestFbml(document.getElementById('i_like_text'), options);
					-->
					</script>
				</div>

				<%= submit_tag 'Save Location', :class => 'inputsubmit' %>
				

				<% end%>
			</div>
		</div>
	</div>
</div>