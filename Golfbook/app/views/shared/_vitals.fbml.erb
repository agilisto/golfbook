<% vitals_box('Vitals') do %>
  <%= link_to "Handicap: #{@user.current_handicap.blank? ? '-' : @user.current_handicap.value}", {:controller => :handicaps, :id => @user.id} %>
      <% unless @user.home_course.blank? %>
        <%= link_to "Course: #{@user.home_course.name}", :controller => 'courses', :action => :show, :id => @user.home_course.id %>
      <% else %>
        Course: none yet.
      <% end %>
  <% unless @friends_count.blank? %>
    <%= link_to "Golfbook Friends: #{@friends_count}", :controller => :home, :action => :friends %>
  <% end %>
  <%= link_to "Rounds Played: #{@user.rounds.count}", user_view_rounds_url(:id => @user.id, :only_path => true) %>
  <%= link_to "Courses Played: #{@user.courses.count}", :controller => :courses, :action => :courses_played %>
  <div style="clear: left; height: 0px;"/>
<% end %>