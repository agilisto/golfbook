<% if display_course.nil? then display_course = false end %>
<li>
	<h1><%= link_to recent_round.score.to_s, :controller => :round, :action => :show, :id => recent_round.id %></h1>
	<span class="name"><fb:name uid='<%= recent_round.user.facebook_uid %>' useyou='false'></fb:name></span>
	<% if display_course %>
		<span class="course"><%= link_to recent_round.course.name, :controller => :courses, :action => :show, :id => recent_round.course.id %></span>
	<% end %>
	<span class="played"><%= time_ago_in_words(recent_round.created_at) %> ago</span>
</li>