<div class="module clearfix page_panel_header no_border">
	<div class="header_page_summary clearfix">
		<div class="thumb">
			<a href="<%= url_for(:action => :index)%>">
				<%= image_tag 'blue_flag_hole.png' %>
			</a>
		</div>
		<div class="info">
			<h2>Courses</h2>
			<div id="sub_menu">
				<%= link_to 'Map View', {:controller => :home, :action => :index} %>
			</div>			
		</div>
	</div>
</div>

<%= render :partial => 'courses_menu' %>

<div id="page_panel">
	<div class="courses">
		
		<!-- Search Box -->
		<form id="course_search">  
			<%= text_field_tag "course_filter", nil, :size => 40, :class => 'inputtext inputsearch', :style => 'padding-left:20px' %>
			<a href="#" class="inputsubmit" onclick="submitForm('<%= url_for :controller => :courses, :action => :filter_by_name, :only_path => false %>', 'course_search', 'results'); return false;">Search</a> 
		</form>
		
		<!-- End Search Box -->
		<div id="results" style="overflow: hidden">
			<div class="main_column">
			
					<h2 class="first_card_section">Results</h2>

					<%= render :partial => 'course', :collection => @courses %>
			
					<%= will_paginate @courses, :inner_window => 2 %>

			</div>
			<div class="side_column">
				<div class="section">
					<h3>Courses Statistics</h3>
					<div class="bar_chart simple">
						<h2 class="header">
							<span class="title"><%= @courses_count -%></span>
							<span class="title_label">Total Courses</span>
							<span class="sub_title"/>
							<div style="clear: left; height: 0px;"/>
						</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>