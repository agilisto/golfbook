<h3 clicktotoggle="course_friends_best">
    <span>Friends: Best scores</span>&nbsp;
</h3>
<div id="course_friends_best">
	<ul class="scorecard">
            <%if course_friends_best.length > 0%>
		<% course_friends_best.each do |round| %>
			<li>
				<fb:name uid="<%= round.user.facebook_uid %>" capitalize="true" /> shot a 
				<strong><%= link_to round.score, :controller => :round, :action => :show, :id => round.id %></strong>
 				<%= time_ago_in_words(round.date_played) %> ago.
			</li>
		<% end %>
            <%else%>
                   <li>No friend scores.</li>
            <%end%>
	</ul>
</div>