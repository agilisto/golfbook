<h3 clicktotoggle="course_friends_recent">
	Recent scores by your friends
</h3>
<div id="course_friends_recent">
	<ul class="scorecard">
		<% course_friends_recent.each do |round| %>
			<li>
				<fb:name uid="<%= round.user.facebook_uid %>" capitalize="true" /> shot a 
				<strong><%= link_to round.score, :controller => :round, :action => :show, :id => round.id %></strong>
 				<%= time_ago_in_words(round.date_played) %> ago.
			</li>
		<% end %>
	</ul>
</div>