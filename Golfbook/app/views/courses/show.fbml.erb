<div class="module clearfix page_panel_header no_border">
	<div class="header_page_summary clearfix">
		<div class="thumb">
			<a href="<%= url_for(:action => :index)%>">
				<%= image_tag 'red_flag_hole.png' %>
			</a>
		</div>
		<div class="info">
			<h2><%= @course.name %></h2>
			<div id="sub_menu">
				<%= link_to 'Back to Courses', {:action => :index} %>
			</div>			
		</div>
		<a class="dh_new_media" href="<%= url_for :controller => :courses, :action => :search %>">
			<div class="tr">
				<div class="bl">
					<div class="br">
						<span>Find Course</span>
					</div>
				</div>
			</div>
		</a>
	</div>
</div>

<%= render :partial => 'courses_menu' %>

<div id="page_panel">
	<div class="courses clearfix">
		<div class="main_column clearfix">
			<h2 class="first_card_section clearfix">Course Information</h2>
			
			<div class="card small_hole_card clearfix">
				<%= render :partial => 'course_friends_recent', :object => @friends_recent_rounds %>
			</div>
			
			<div class="card small_hole_card">
				<%= render :partial => 'course_friends_best', :object => @friends_best_rounds %>
			</div>
			
			<div class="card small_hole_card">
				<%= render :partial => 'course_summary', :object => @course %>
			</div>
			
			<div class="card small_hole_card">
				<%= render :partial => "rating/rate", :locals => { :asset => @course } %>  
			</div>
			
			<div class="card small_hole_card">
				<%= render :partial => 'course_map', :object => @course %>
			</div>
			
			<div class="card small_hole_card">
				<%= render :partial => 'course_discuss' %>
			</div>
			
		</div>
		<div class="side_column">
			<div class="section">
				<%= render :partial => 'course_stats' %>
			</div>
			<div class="section">
				<%= render :partial => 'course_actions' %>
			</div>
			<div class="section">
			<h3>Recently Posted Rounds</h3>
					<ul class="small_list">
						<%= render :partial => 'shared/recent_round', :collection => @recent_rounds %>
					</ul>
				</div>
			</div>
			<!--<div class="section">
				<h3>Recent Course Comments</h3>
			</div>-->
		</div>
	</div>
</div>