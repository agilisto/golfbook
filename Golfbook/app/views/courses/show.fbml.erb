<div class="module clearfix page_panel_header no_border">
	<div class="header_page_summary clearfix">
		<div class="thumb">
			<a href="<%= url_for(:action => :index)%>">
				<img src="http://993440e2.fb.joyent.us:8889/images/red_flag_hole.png" />
			</a>
		</div>
		<div class="info">
			<h2><%= @course.name %></h2>
			<div id="sub_menu">
				<%= link_to 'Back to Courses', {:action => :index} %>
			</div>			
		</div>
	</div>
</div>
<div id="page_panel">
	<div class="courses">
		<div class="main_column">
			<h2 class="first_card_section">Course Information</h2>

			<div class="card small_hole_card">
				<%= render :partial => 'course_summary', :object => @course %>
			</div>

			<div class="card small_hole_card">
				<%= render :partial => 'course_map', :object => @course %>
			</div>
			
			<div class="card small_hole_card">
				<h3>
					Discuss <%= @course.name %>
				</h3>
				<fb:board xid="<%= @course.id%>" canpost="true" candelete="false" canmark="false" cancreatetopic="true" numtopics="5" >
			</div>
			
		</div>
		<div class="side_column">
			<div class="section">
				<h3>Course Stats</h3>
				<div class="bar_chart simple">
					<h2 class="header">
						<span class="title">0</span>
						<span class="title_label">Total Players</span>
						<span class="sub_title"/>
						<div style="clear: left; height: 0px;"/>
					</h2>
				</div>
			</div>
		</div>
	</div>
</div>