<div class="module clearfix page_panel_header no_border">
  <div class="header_page_summary clearfix">
    <div class="thumb">
    </div>
    <div class="info">
      <h2>Handicaps</h2>
      <div>Welcome to Golfbook</div>
    </div>
  </div>
</div>

<style>
li{
  list-style:none;
  padding:5px;
}

</style>
<%= render :partial => 'shared/home_menu.fbml.erb' %>

<div class="editor_panel clearfix">
  <div class="full_width_table_container">
    <center>
      <h2>Choose Friends to Chart</h2>
      <fb:editor action="<%= url_for(:controller => 'handicaps', :action => 'index', :id => @user.id) %>" labelwidth="50">
          <fb:editor_custom label="Friends">
            <ul>
              <% @friends.each do |friend| %>
                <li><input name="friends[]" id="friends[]" type="checkbox" value="<%= friend.id %>" />&nbsp;&nbsp;<fb:name uid="<%= friend.facebook_uid %>" /></li>
              <% end %>
            </ul>
          </fb:editor_custom>
          <fb:editor_buttonset>
            <label width="50px">&nbsp;</label><fb:editor_button name="commit" value="Submit" />
          </fb:editor_buttonset>
      </fb:editor>
    </center>
  </div>
</div>


