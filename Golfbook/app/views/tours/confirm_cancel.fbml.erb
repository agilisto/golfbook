<fb:title><%= @tour.name %></fb:title>
<div class="module clearfix page_panel_header no_border">
	<div class="header_page_summary clearfix">
		<div class="thumb">
		
		</div>
		<div class="info">
			<h2><%= @tour.name %></h2>
			<!--div id="sub_menu">
				<%= link_to 'Back to My Tours', {:action => :index} %>
			</div-->
		</div>
	</div>
</div>

<%= render :partial => 'tour_menu' %>

  <div id="page_panel">
    <div class="courses clearfix">
      <div class="main_column clearfix">
        <h2 class="first_card_section clearfix">Cancel Tour</h2>
      
        <fb:editor action="<%=url_for(:action => :cancel, :only_path => true)%>">
            <input type="hidden" name="id" value="<%=@tour.id%>" /> 
                <p>Please confirm that you wish to cancel this tour. This action cannot be undone.</p>
            <fb:editor-buttonset>  
            <fb:editor-button value="Cancel Tour"/>
            <fb:editor-cancel href="<%=url_for(:action => :show, :id => @tour.id, :only_path => true)%>" />
                                </fb:editor-buttonset>
            </fb:editor>
      
          </div>
          <div class="side_column">
			<div class="section clearfix">
				<%= render :partial => 'tour_stats' %>
			</div>
			<div class="section clearfix">
				<%= render :partial => 'tour_actions' %>
			</div>
          </div>
        </div>
      </div>
