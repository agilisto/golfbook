<div class="module clearfix page_panel_header no_border">
	<div class="header_page_summary clearfix">
		<div class="thumb">
		
		</div>
		<div class="info">
			<h2><%= @course.name %></h2>
			<!--div id="sub_menu">
				<%= link_to 'Back to Courses', {:controller => :courses, :action => :index} %>
			</div-->
		</div>
	</div>
</div>

<%= render :partial => 'tours_menu' %>

<div id="page_panel">
	<div class="courses clearfix">
		<div class="main_column clearfix">
			<h2 class="first_card_section clearfix">Add <%= @course.name %> to a tour</h2>
						
			<fb:editor action="add_course_to_tour_proc">
                            <input type="hidden" name="course_id" value="<%=@course.id%>" />
                            <%@tours.each do |t|%>
                              <p><input type="radio" name="tour_id" value="<%=t.id%>" /> <%=t.name%></p>
                            <%end%>
                            <fb:editor-buttonset>
                              <fb:editor-button value="Add Course" />
                            </fb:editor-buttonset>
                        </fb:editor>
		</div>
		<div class="side_column">
			<div class="section clearfix">
				<h3>Tour Statistics</h3>
				<div class="bar_chart simple">
					<h2 class="header">
						<span class="title"><%= @tours.length -%></span>
						<span class="title_label">Total Tours</span>
						<span class="sub_title"/>
						<div style="clear: left; height: 0px;"/>
					</h2>
				</div>
			</div>
		</div>
	</div>
</div>