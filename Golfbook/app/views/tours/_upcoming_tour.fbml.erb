<div>
	<span class="name" style="font-size:11px;font-weight:bold">
		<%= link_to upcoming_tour.tour.name, :controller => :tours, :action => :show, :id => upcoming_tour.tour.id %>
	</span><br/>
	<span class="name">
		<a href="<%= profile_view_url :id=>upcoming_tour.tour.user.id, :only_path => true%>">
			<fb:name uid='<%= upcoming_tour.tour.user.facebook_uid %>' linked="false" useyou='false' />
		</a>
	</span>
	<span class="played" style="font-size:9px"><%= upcoming_tour.to_play_at.to_formatted_s(:long) %></span>
</div>
